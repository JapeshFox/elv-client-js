{
  "eluv.schema": [
    {
      "key": "name",
      "label": "Name",
      "type": "string",
      "required": true
    },
    {
      "key": "eluv.description",
      "label": "Description",
      "type": "text",
      "required": false
    },
    {
      "key": "image",
      "label": "Thumbnail",
      "type": "file",
      "accept": ["image/*"],
      "preview": true,
      "required": true
    },
    {
      "key": "video",
      "label": "Video",
      "type": "file",
      "accept": ["video/*"],
      "required": false
    }
  ],
  "eluv.allowCustomMetadata": true
}
